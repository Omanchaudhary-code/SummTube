{
    "name": "summtube/backend",
    "description": "SummTube PHP Backend - AI-powered YouTube Video Summarizer",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.11",
        "google/apiclient": "^2.18"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "core/",
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
